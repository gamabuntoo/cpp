NAME = phonebook
CC = g++
CFLAGS = -std=c++98 -Wall -Wextra -Werror -g3 -Iphonebook
RM = rm -f
SRCS = phonebook.cpp
OBJS = $(SRCS:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

$(OBJS): $(SRCS)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) -r $(OBJS)
	@echo "$(MAGENTA)ðŸ§¹ Cleaning objects...$(RESET)"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(GREEN)ðŸ—‘ï¸ Cleaning objects and executable...$(RESET)"

re: fclean clean all